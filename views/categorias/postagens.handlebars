<h1>{{categorias}}</h1>
{{#each postagens}}
<div class="card mt-5">
    <div class="card-body">      
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
        <small>Categoria: {{categoria.nome}}</small><br>
        <small>Publicado: {{data}}</small>   
    </div>       
</div>
{{else}}
    <h5>Nenhuma postagem registrada</h5>
{{/each}}